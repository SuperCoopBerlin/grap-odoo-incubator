<odoo noupdate="1">

    <record forcecreate="True" id="ir_cron_synchronize" model="ir.cron">
        <field name="name">Database Synchronization - Synchronize</field>
        <field name="model_id" ref="model_synchronization_mixin"/>
        <field name="state">code</field>
        <field name="code">model._cron_synchronize_all()</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field  name="doall" eval="False"/>
        <field  name="active" eval="False"/>
    </record>

</odoo>
