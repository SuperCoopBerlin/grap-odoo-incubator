<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">

            <!-- <span class="o_hr_attendance_kiosk_backdrop"/> -->
    <t t-name="MobileAppPurchaseKioskModeSetProduct">
        <div class="o_hr_attendance_kiosk_mode_container o_home_menu_background">
            <div class="o_hr_attendance_kiosk_mode">
                <h1>Purchase Order</h1>
                <h2>Choose Product</h2>
                <div class="row o_hr_attendance_kiosk_welcome_row">
                    <div class="col-sm-5">
                        <img class="img img-fluid d-block mx-auto" src="/hr_attendance/static/src/img/barcode.png"/>
                        <h5 class="mt8 mb0 text-muted">Scan a Product</h5>
                    </div>
                    <div class="col-sm-2">
                        <h3 class="mt0 mb8"><i>or</i></h3>
                    </div>
                    <div class="col-sm-5">
                        <button class="o_product_product_kanban_select_button btn btn-primary mb16">
                            <div class="mb16 mt16">Select Product</div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="MobileAppPurchaseKioskModeSetQuantity">
        <div class="o_hr_attendance_kiosk_mode_container o_home_menu_background">
            <span class="o_hr_attendance_kiosk_backdrop"/>
            <div class="o_hr_attendance_kiosk_mode">
                <h1>Purchase Order</h1>
                <h2>Set Quantity</h2>
                <div class="row o_hr_attendance_kiosk_welcome_row">

                    <h1 class="mb8">product : <t t-esc="widget.product_name"/></h1>


                    <input type="text" class="weight" id="quantity" autofocus="autofocus" />
                    <div class="col-sm-5">
                        <button class="button_add_quantity btn btn-primary mb16">
                            <div class="mb16 mt16">Add quantity</div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </t>


    <t t-name="SylvainWidget">
        FROMAGE DE CHEVRE
    </t>

</template>
